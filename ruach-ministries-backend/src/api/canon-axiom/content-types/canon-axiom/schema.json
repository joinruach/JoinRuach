{
  "kind": "collectionType",
  "collectionName": "canon_axioms",
  "info": {
    "singularName": "canon-axiom",
    "pluralName": "canon-axioms",
    "displayName": "Canon Axiom",
    "description": "Core doctrinal statements and definitions unlocked through formation"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "definition": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["covenant", "kingdom", "holiness", "redemption", "ecclesiology", "eschatology", "pneumatology"],
      "required": true
    },
    "unlockPhase": {
      "type": "enumeration",
      "enum": ["awakening", "separation", "discernment", "commission", "stewardship"]
    },
    "scriptureFoundation": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::scripture-verse.scripture-verse"
    },
    "relatedAxioms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::canon-axiom.canon-axiom"
    },
    "teachingNodes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::guidebook-node.guidebook-node",
      "mappedBy": "relatedAxioms"
    },
    "practicalApplication": {
      "type": "richtext"
    },
    "commonMisconceptions": {
      "type": "richtext"
    }
  }
}
