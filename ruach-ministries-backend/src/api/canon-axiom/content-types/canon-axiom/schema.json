{
  "kind": "collectionType",
  "collectionName": "canon_axioms",
  "info": {
    "singularName": "canon-axiom",
    "pluralName": "canon-axioms",
    "displayName": "Canon Axiom",
    "description": "Core doctrinal statements and definitions unlocked through formation"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "axiomId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "axiomNumber": {
      "type": "integer"
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDefinition": {
      "type": "text"
    },
    "definition": {
      "type": "richtext",
      "required": true
    },
    "canonLevel": {
      "type": "enumeration",
      "enum": ["Foundation", "Core", "Support", "Corrective"]
    },
    "formationPhases": {
      "type": "json"
    },
    "function": {
      "type": "json"
    },
    "hierarchyTier": {
      "type": "enumeration",
      "enum": ["Tier 1", "Tier 2", "Tier 3", "Tier 4"],
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["covenant", "kingdom", "holiness", "redemption", "ecclesiology", "eschatology", "pneumatology"],
      "required": true
    },
    "sensitivity": {
      "type": "enumeration",
      "enum": ["Low", "Medium", "High", "Critical"],
      "default": "Medium"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Review", "Ready", "Synced", "Published", "Deprecated", "Needs Revision"],
      "default": "Draft"
    },
    "unlockPhase": {
      "type": "enumeration",
      "enum": ["awakening", "separation", "discernment", "commission", "stewardship"]
    },
    "scriptureFoundation": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::scripture-verse.scripture-verse"
    },
    "relatedAxioms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::canon-axiom.canon-axiom"
    },
    "nodes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::guidebook-node.guidebook-node",
      "mappedBy": "canonAxioms"
    },
    "canonReferences": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::canon-release.canon-release",
      "mappedBy": "canonReferences"
    },
    "practicalApplication": {
      "type": "richtext"
    },
    "commonMisconceptions": {
      "type": "richtext"
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    }
  }
}
