{
  "kind": "collectionType",
  "collectionName": "speakers",
  "info": {
    "singularName": "speaker",
    "pluralName": "speakers",
    "displayName": "Speaker"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "displayName": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string"
    },
    "organization": {
      "type": "string"
    },
    "bio": {
      "type": "text"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ],
      "required": true
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "shared.social-link"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "mediaItems": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::media-item.media-item",
      "mappedBy": "speakers"
    },
    "lessons": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::lesson.lesson",
      "inversedBy": "speakers"
    }
  }
}
