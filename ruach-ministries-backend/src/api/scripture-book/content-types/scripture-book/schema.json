{
  "kind": "collectionType",
  "collectionName": "scripture_books",
  "info": {
    "singularName": "scripture-book",
    "pluralName": "scripture-books",
    "displayName": "Scripture Book",
    "description": "Canonical grouping of scripture works (Law, Prophets, Writings, etc.)"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "testament": {
      "type": "enumeration",
      "enum": ["tanakh", "renewed_covenant", "apocrypha"],
      "required": true
    },
    "canonicalOrder": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "works": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::scripture-work.scripture-work"
    },
    "hebrewName": {
      "type": "string"
    },
    "greekName": {
      "type": "string"
    }
  }
}
