{
  "kind": "collectionType",
  "collectionName": "series",
  "info": {
    "singularName": "series",
    "pluralName": "series-collection",
    "displayName": "Series",
    "description": "Organize related media items into thematic collections."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "kind": {
      "type": "enumeration",
      "enum": [
        "series",
        "course",
        "conference",
        "playlist"
      ],
      "default": "series",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "summary": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "heroBackdrop": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "collections"
    },
    "visibility": {
      "type": "enumeration",
      "enum": [
        "public",
        "unlisted",
        "private"
      ],
      "default": "public",
      "required": true
    },
    "sortMode": {
      "type": "enumeration",
      "enum": [
        "episode_order",
        "newest_first"
      ],
      "default": "episode_order"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "mediaItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::media-item.media-item",
      "mappedBy": "series"
    }
  }
}
