{
  "kind": "collectionType",
  "collectionName": "scripture_works",
  "info": {
    "singularName": "scripture-work",
    "pluralName": "scripture-works",
    "displayName": "Scripture Work",
    "description": "Individual books of the Bible (Genesis, Exodus, Matthew, etc.)"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "workId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "canonicalName": {
      "type": "string",
      "required": true
    },
    "translatedTitle": {
      "type": "string"
    },
    "shortCode": {
      "type": "string",
      "required": true
    },
    "testament": {
      "type": "enumeration",
      "enum": ["old", "new", "apocrypha"],
      "required": true
    },
    "canonicalOrder": {
      "type": "integer",
      "required": true
    },
    "genre": {
      "type": "enumeration",
      "enum": [
        "law",
        "history",
        "wisdom",
        "prophecy",
        "gospel",
        "epistle",
        "apocalyptic"
      ]
    },
    "totalChapters": {
      "type": "integer",
      "required": true
    },
    "totalVerses": {
      "type": "integer",
      "required": true
    },
    "extractionStatus": {
      "type": "enumeration",
      "enum": ["pending", "processing", "completed", "failed", "validated"],
      "default": "pending"
    },
    "extractionMetadata": {
      "type": "json"
    },
    "version": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::scripture-version.scripture-version",
      "inversedBy": "works"
    },
    "verses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::scripture-verse.scripture-verse",
      "mappedBy": "work"
    }
  }
}
