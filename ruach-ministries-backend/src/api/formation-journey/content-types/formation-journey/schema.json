{
  "kind": "collectionType",
  "collectionName": "formation_journeys",
  "info": {
    "singularName": "formation-journey",
    "pluralName": "formation-journeys",
    "displayName": "Formation Journey",
    "description": "User's current formation state pointer (one per user)"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "covenantType": {
      "type": "enumeration",
      "enum": [
        "formation_journey",
        "resource_explorer"
      ],
      "required": true
    },
    "currentPhase": {
      "type": "enumeration",
      "enum": [
        "awakening",
        "separation",
        "discernment",
        "commission",
        "stewardship"
      ],
      "required": true
    },
    "phaseEnteredAt": {
      "type": "datetime"
    },
    "covenantEnteredAt": {
      "type": "datetime",
      "required": true
    },
    "lastActivityAt": {
      "type": "datetime",
      "required": true
    },
    "sectionsViewed": {
      "type": "json"
    },
    "checkpointsReached": {
      "type": "json"
    },
    "checkpointsCompleted": {
      "type": "json"
    },
    "reflectionsSubmitted": {
      "type": "integer",
      "default": 0
    },
    "unlockedCanonAxioms": {
      "type": "json"
    },
    "unlockedCourses": {
      "type": "json"
    },
    "unlockedCannonReleases": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "anonymousUserId": {
      "type": "string",
      "unique": true
    }
  }
}
