{
  "kind": "collectionType",
  "collectionName": "guidebook_nodes",
  "info": {
    "singularName": "guidebook-node",
    "pluralName": "guidebook-nodes",
    "displayName": "Guidebook Node",
    "description": "Individual teaching sections within a formation phase"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "nodeId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Review", "Ready", "Synced", "Published", "Deprecated", "Needs Revision"],
      "default": "Draft"
    },
    "orderInPhase": {
      "type": "integer",
      "required": true
    },
    "nodeType": {
      "type": "enumeration",
      "enum": ["Awakening", "Healing", "Warfare", "Formation", "Commissioning"]
    },
    "formationScope": {
      "type": "enumeration",
      "enum": ["Individual", "Household", "Ecclesia", "Network"],
      "required": true,
      "default": "Individual"
    },
    "sensitivity": {
      "type": "enumeration",
      "enum": ["Low", "Medium", "High", "Critical"],
      "default": "Medium"
    },
    "checkpointType": {
      "type": "enumeration",
      "enum": ["None", "Text Response", "Voice Response", "Text & Voice"],
      "default": "None"
    },
    "checkpointPrompt": {
      "type": "richtext"
    },
    "scriptureReferences": {
      "type": "text"
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "checksum": {
      "type": "string",
      "required": true
    },
    "publishedVersion": {
      "type": "string"
    },
    "syncLock": {
      "type": "boolean",
      "default": false
    },
    "syncedToStrapi": {
      "type": "boolean",
      "default": false
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "formationFocus": {
      "type": "text",
      "description": "One-sentence intent statement for this node's formation purpose"
    },
    "phase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::formation-phase.formation-phase",
      "inversedBy": "nodes"
    },
    "canonAxioms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::canon-axiom.canon-axiom",
      "inversedBy": "nodes"
    },
    "videoUrl": {
      "type": "string"
    },
    "videoMedia": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["videos"]
    },
    "estimatedReadTime": {
      "type": "integer"
    },
    "checkpointGuidingQuestions": {
      "type": "richtext"
    },
    "minimumWordCount": {
      "type": "integer",
      "default": 50
    },
    "minimumDwellTime": {
      "type": "integer",
      "default": 120
    },
    "unlockRequirements": {
      "type": "json"
    }
  }
}
