{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "lessonId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "lessonTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "summary": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "required": true
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "runtime": {
      "type": "integer",
      "min": 0
    },
    "videoUrl": {
      "type": "string"
    },
    "lessonType": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Review", "Ready", "Synced", "Published", "Deprecated", "Needs Revision"],
      "default": "Draft"
    },
    "source": {
      "type": "component",
      "repeatable": false,
      "component": "media.video-source"
    },
    "transcript": {
      "type": "richtext"
    },
    "transcriptFile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "keyScripture": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "lessons"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons",
      "required": true
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson-comment.lesson-comment",
      "mappedBy": "lesson"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category"
    },
    "speakers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::speaker.speaker",
      "mappedBy": "lessons"
    },
    "resources": {
      "type": "component",
      "repeatable": true,
      "component": "shared.resource-link"
    },
    "previewAvailable": {
      "type": "boolean",
      "default": false
    },
    "featuredInResources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource-directory.resource-directory",
      "mappedBy": "featuredLessons"
    },
    "requiredAccessLevel": {
      "type": "enumeration",
      "enum": ["basic", "full", "leader"],
      "default": "basic"
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "syncLock": {
      "type": "boolean",
      "default": false
    },
    "syncedToStrapi": {
      "type": "boolean",
      "default": false
    }
  }
}
