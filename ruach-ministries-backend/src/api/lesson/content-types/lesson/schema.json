{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "summary": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 1,
      "min": 1,
      "required": true
    },
    "duration": {
      "type": "integer",
      "min": 0
    },
    "videoUrl": {
      "type": "string"
    },
    "source": {
      "type": "component",
      "repeatable": false,
      "component": "media.video-source"
    },
    "transcript": {
      "type": "richtext"
    },
    "transcriptFile": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files"
      ]
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "lessons",
      "required": true
    },
    "speakers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::speaker.speaker",
      "mappedBy": "lessons"
    },
    "resources": {
      "type": "component",
      "repeatable": true,
      "component": "shared.resource-link"
    },
    "previewAvailable": {
      "type": "boolean",
      "default": false
    }
  }
}
