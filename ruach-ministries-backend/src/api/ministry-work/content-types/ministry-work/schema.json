{
  "kind": "collectionType",
  "collectionName": "ministry_works",
  "info": {
    "singularName": "ministry-work",
    "pluralName": "ministry-works",
    "displayName": "Ministry Work",
    "description": "Individual ministry books (Ministry of Healing, Desire of Ages, etc.)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "workId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "shortCode": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "Ellen G. White"
    },
    "yearPublished": {
      "type": "integer"
    },
    "isbn": {
      "type": "string"
    },
    "copyright": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["health", "education", "prophecy", "devotional", "counsel", "biography"]
    },
    "totalChapters": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "totalParagraphs": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "extractionStatus": {
      "type": "enumeration",
      "enum": ["pending", "processing", "completed", "failed", "validated"],
      "default": "pending"
    },
    "extractionMetadata": {
      "type": "json"
    },
    "sourceMetadata": {
      "type": "json"
    },
    "texts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ministry-text.ministry-text",
      "mappedBy": "work"
    }
  }
}
