{
  "kind": "collectionType",
  "collectionName": "ruach_topics",
  "info": {
    "singularName": "ruach-topic",
    "pluralName": "ruach-topics",
    "displayName": "Ruach Topic",
    "description": "Reusable topic tags for snippets and refined content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "snippets": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::ruach-snippet.ruach-snippet",
      "mappedBy": "topics"
    }
  }
}
