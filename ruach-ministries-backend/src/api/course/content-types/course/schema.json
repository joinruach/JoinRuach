{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Course shells consumed by the Next.js frontend"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "courseId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "profile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::course-profile.course-profile",
      "mappedBy": "course"
    },
    "excerpt": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "description": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Review", "Ready", "Synced", "Published", "Deprecated", "Needs Revision"],
      "default": "Draft"
    },
    "unlockRequirements": {
      "type": "text"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "foundation",
        "intermediate",
        "advanced"
      ],
      "default": "foundation"
    },
    "estimatedDuration": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "heroVideo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson-comment.lesson-comment",
      "mappedBy": "course"
    },
    "phase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::formation-phase.formation-phase",
      "required": true,
      "inversedBy": "courses"
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module",
      "mappedBy": "course"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "seoImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    }
  }
}
