{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Course shells consumed by the Next.js frontend"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "courseId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "snapshot": {
      "type": "component",
      "repeatable": false,
      "component": "course.snapshot"
    },
    "startHere": {
      "type": "component",
      "repeatable": false,
      "component": "course.start-here"
    },
    "description": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "text"
    },
    "courseType": {
      "type": "enumeration",
      "enum": [
        "lead_magnet",
        "core_course",
        "formation_track",
        "warfare_freedom",
        "ekklesia_equipping",
        "media_creative",
        "truth_systems",
        "practical_life"
      ]
    },
    "priceType": {
      "type": "enumeration",
      "enum": ["free", "paid_core", "paid_flagship", "paid_specialty"]
    },
    "visibility": {
      "type": "enumeration",
      "enum": ["public", "gated", "cohort_only", "private"],
      "default": "public"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Draft",
        "Review",
        "Ready",
        "Synced",
        "Published",
        "Deprecated",
        "Needs Revision"
      ],
      "default": "Draft"
    },
    "level": {
      "type": "enumeration",
      "enum": [
        "foundation",
        "intermediate",
        "advanced"
      ],
      "default": "foundation"
    },
    "formationPhase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::formation-phase.formation-phase",
      "inversedBy": "courses"
    },
    "phase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::formation-phase.formation-phase",
      "inversedBy": "courses",
      "required": true
    },
    "lessonCount": {
      "type": "integer",
      "min": 0
    },
    "moduleCount": {
      "type": "integer",
      "min": 0
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "profile": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::course-profile.course-profile",
      "mappedBy": "course"
    },
    "requiredAccessLevel": {
      "type": "enumeration",
      "enum": ["public", "partner", "builder", "steward"],
      "required": true,
      "default": "partner"
    },
    "unlockRequirements": {
      "type": "text"
    },
    "estimatedDuration": {
      "type": "string"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "heroVideo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "course"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson-comment.lesson-comment",
      "mappedBy": "course"
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module",
      "mappedBy": "course"
    },
    "resources": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::resource.resource",
      "mappedBy": "course"
    },
    "courseEntitlements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-entitlement.course-entitlement",
      "mappedBy": "course"
    },
    "courseSeats": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course-seat.course-seat",
      "mappedBy": "course"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "landingConfig": {
      "type": "component",
      "repeatable": false,
      "component": "course.landing-config"
    },
    "playerConfig": {
      "type": "component",
      "repeatable": false,
      "component": "course.player-config"
    },
    "auditConfig": {
      "type": "component",
      "repeatable": false,
      "component": "course.audit-config"
    },
    "ctaDetoxCourse": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "seoImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "syncLock": {
      "type": "boolean",
      "default": false
    },
    "syncedToStrapi": {
      "type": "boolean",
      "default": false
    }
  }
}
