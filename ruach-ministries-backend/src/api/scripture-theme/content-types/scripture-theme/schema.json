{
  "kind": "collectionType",
  "collectionName": "scripture_themes",
  "info": {
    "singularName": "scripture-theme",
    "pluralName": "scripture-themes",
    "displayName": "Scripture Theme",
    "description": "Thematic tagging for scripture passages"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["covenant", "kingdom", "holiness", "redemption", "worship", "prophecy", "wisdom", "law", "grace", "spirit"]
    },
    "parentTheme": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::scripture-theme.scripture-theme",
      "inversedBy": "childThemes"
    },
    "childThemes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::scripture-theme.scripture-theme",
      "mappedBy": "parentTheme"
    },
    "verses": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::scripture-verse.scripture-verse",
      "mappedBy": "themes"
    },
    "verseCount": {
      "type": "integer",
      "default": 0
    }
  }
}
