{
  "kind": "collectionType",
  "collectionName": "formation_phases",
  "info": {
    "singularName": "formation-phase",
    "pluralName": "formation-phases",
    "displayName": "Formation Phase",
    "description": "Major phases in the formation journey (Awakening, Separation, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "phaseName": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "phaseName",
      "required": true
    },
    "phaseId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "phase": {
      "type": "enumeration",
      "enum": ["awakening", "separation", "discernment", "commission", "stewardship"],
      "required": true,
      "unique": true
    },
    "order": {
      "type": "integer",
      "required": true
    },
    "duration": {
      "type": "string"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "maturityFocus": {
      "type": "json"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Review", "Ready", "Synced", "Published", "Deprecated", "Needs Revision"],
      "default": "Draft"
    },
    "color": {
      "type": "enumeration",
      "enum": ["blue", "purple", "indigo", "green", "amber"],
      "default": "blue"
    },
    "icon": {
      "type": "string"
    },
    "estimatedDuration": {
      "type": "string"
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "unlockRequirements": {
      "type": "json"
    },
    "nodes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::guidebook-node.guidebook-node",
      "mappedBy": "phase"
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "phase"
    }
  }
}
