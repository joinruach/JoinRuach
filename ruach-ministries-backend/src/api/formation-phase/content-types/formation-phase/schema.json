{
  "kind": "collectionType",
  "collectionName": "formation_phases",
  "info": {
    "singularName": "formation-phase",
    "pluralName": "formation-phases",
    "displayName": "Formation Phase",
    "description": "Major phases in the formation journey (Awakening, Separation, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "phase": {
      "type": "enumeration",
      "enum": ["awakening", "separation", "discernment", "commission", "stewardship"],
      "required": true,
      "unique": true
    },
    "order": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "color": {
      "type": "enumeration",
      "enum": ["blue", "purple", "indigo", "green", "amber"],
      "default": "blue"
    },
    "icon": {
      "type": "string"
    },
    "estimatedDuration": {
      "type": "string"
    },
    "unlockRequirements": {
      "type": "json"
    },
    "nodes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::guidebook-node.guidebook-node",
      "mappedBy": "phase"
    }
  }
}
