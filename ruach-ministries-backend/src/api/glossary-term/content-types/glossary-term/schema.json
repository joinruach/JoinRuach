{
  "kind": "collectionType",
  "collectionName": "glossary_terms",
  "info": {
    "singularName": "glossary-term",
    "pluralName": "glossary-terms",
    "displayName": "Glossary Term",
    "description": "Theological and linguistic definitions"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "term": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "term"
    },
    "definition": {
      "type": "richtext",
      "required": true
    },
    "shortDefinition": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["theological", "linguistic", "cultural", "historical", "liturgical"]
    },
    "hebrewTerm": {
      "type": "string"
    },
    "greekTerm": {
      "type": "string"
    },
    "relatedTerms": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::glossary-term.glossary-term"
    },
    "lemma": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::scripture-lemma.scripture-lemma",
      "inversedBy": "glossaryTerm"
    },
    "references": {
      "type": "json"
    }
  }
}
