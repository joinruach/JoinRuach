{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "External lesson resources, references, or downloads."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "resourceId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "resourceType": {
      "type": "enumeration",
      "enum": ["article", "video", "audio", "document", "tool", "link"]
    },
    "url": {
      "type": "string"
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course"
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "syncLock": {
      "type": "boolean",
      "default": false
    },
    "syncedToStrapi": {
      "type": "boolean",
      "default": false
    }
  }
}
