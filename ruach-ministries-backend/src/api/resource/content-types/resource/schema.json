{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "External lesson resources, references, or downloads."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "resourceId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "scripture",
        "teaching",
        "book",
        "video",
        "article",
        "tool",
        "podcast",
        "document",
        "other",
        "library_book",
        "library_document"
      ]
    },
    "authorityLevel": {
      "type": "enumeration",
      "required": true,
      "enum": ["canon", "anchor", "companion", "context", "caution"]
    },
    "url": {
      "type": "string"
    },
    "whyThisMatters": {
      "type": "text"
    },
    "howToUse": {
      "type": "richtext"
    },
    "author": {
      "type": "string"
    },
    "source": {
      "type": "enumeration",
      "enum": [
        "bible",
        "youtube",
        "rumble",
        "spotify",
        "apple_podcasts",
        "pdf",
        "website",
        "notion",
        "other"
      ]
    },
    "runtimeMinutes": {
      "type": "integer",
      "min": 0
    },
    "sortOrder": {
      "type": "integer",
      "min": 0
    },
    "isRequired": {
      "type": "boolean",
      "default": false
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "resources",
      "required": true
    },
    "module": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::module.module",
      "inversedBy": "resources"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "resources"
    },
    "notionPageId": {
      "type": "string",
      "unique": true
    },
    "checksum": {
      "type": "string"
    },
    "strapiEntryId": {
      "type": "string",
      "unique": true
    },
    "lastSyncedAt": {
      "type": "datetime"
    },
    "syncErrors": {
      "type": "text"
    },
    "syncLock": {
      "type": "boolean",
      "default": false
    },
    "syncedToStrapi": {
      "type": "boolean",
      "default": false
    },
    "librarySourceId": {
      "type": "integer",
      "private": false
    },
    "libraryVersionId": {
      "type": "integer",
      "private": false
    },
    "libraryCategory": {
      "type": "enumeration",
      "enum": [
        "theology",
        "discipleship",
        "writing_craft",
        "bible_study",
        "spiritual_formation",
        "leadership"
      ]
    },
    "libraryMetadata": {
      "type": "json"
    }
  }
}
