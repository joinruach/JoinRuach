{
  "kind": "collectionType",
  "collectionName": "media_items",
  "info": {
    "singularName": "media-item",
    "pluralName": "media-items",
    "displayName": "Media Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "testimony",
        "teaching",
        "worship",
        "podcast",
        "short"
      ],
      "default": "testimony",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "description": {
      "type": "text"
    },
    "excerpt": {
      "type": "text"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "configurable": false,
      "index": true
    },
    "legacyCategory": {
      "type": "string",
      "configurable": false,
      "private": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "mediaItems"
    },
    "source": {
      "type": "component",
      "repeatable": false,
      "component": "media.video-source"
    },
    "series": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::series.series",
      "inversedBy": "mediaItems"
    },
    "weekNumber": {
      "type": "integer",
      "min": 1
    },
    "episodeNumber": {
      "type": "integer",
      "min": 1
    },
    "durationSec": {
      "type": "integer",
      "min": 0
    },
    "releasedAt": {
      "type": "datetime",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "speakers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::speaker.speaker",
      "inversedBy": "mediaItems"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "mappedBy": "mediaItems"
    },
    "videoUrl": {
      "type": "string"
    },
    "ctaLabel": {
      "type": "string"
    },
    "ctaUrl": {
      "type": "string"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "transcript": {
      "type": "richtext"
    },
    "seoTitle": {
      "type": "string"
    },
    "seoDescription": {
      "type": "text"
    },
    "seoImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featuredInResources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource-directory.resource-directory",
      "mappedBy": "featuredMediaItems"
    },
    "autoPublish": {
      "type": "boolean",
      "default": false,
      "description": "Automatically post to connected social platforms when published"
    },
    "platforms": {
      "type": "json",
      "description": "Target platforms for auto-publishing (Facebook, YouTube, Instagram, X, Patreon, Rumble, Locals, Truth Social)"
    },
    "publishStatus": {
      "type": "json",
      "description": "Per-platform publishing status with timestamps and error messages"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 500,
      "description": "Social media-ready caption (shorter than full description)"
    },
    "hashtags": {
      "type": "string",
      "description": "Hashtags for social media posts (e.g., #Faith #Ministry #Testimony)"
    },
    "socialThumbnail": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ],
      "description": "Optional custom thumbnail optimized for social media (1200x630 recommended)"
    }
  }
}
