{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@ruach/components/*": [
        "../../packages/ruach-components/src/*"
      ],
      "@ruach/addons/*": [
        "../../packages/ruach-next-addons/src/*"
      ],
      "next-intl/link": [
        "src/components/navigation/LocalizedLink.tsx"
      ]
    },
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "esModuleInterop": true,
    "isolatedModules": true,
    "typeRoots": [
      "../../types",
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "types": [
      "jest",
      "node",
      "react",
      "react-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": false
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../types/**/*.d.ts",
    "../../packages/ruach-components/src/**/*.ts",
    "../../packages/ruach-components/src/**/*.tsx",
    "../../packages/ruach-next-addons/src/**/*.ts",
    "../../packages/ruach-next-addons/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts"
  ]
}
