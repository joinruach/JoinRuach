{
  "name": "ruach-next",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS=--max-old-space-size=3072 next dev --turbo",
    "build": "NEXT_TELEMETRY_DISABLED=1 pnpm --filter @ruach/components run build && pnpm --filter @ruach/addons run build && NODE_OPTIONS=--max-old-space-size=4096 next build",
    "start": "next start -p 3000",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "ci:verify": "pnpm run lint && pnpm run typecheck && pnpm run build"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@sentry/nextjs": "^8.40.0",
    "@resvg/resvg-js": "^2.6.2",
    "@ruach/addons": "workspace:*",
    "@ruach/components": "workspace:*",
    "@ruach/tailwind-preset": "workspace:*",
    "@upstash/ratelimit": "^1.0.2",
    "@upstash/redis": "^1.30.0",
    "next": "15.5.2",
    "next-auth": "^4.24.7",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "^16.9.0",
    "satori": "^0.10.13",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@tailwindcss/typography": "^0.5.13",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.4"
  }
}
