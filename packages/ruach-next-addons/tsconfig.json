{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ruach/addons/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
