{
  "name": "@ruach/components",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./src/styles/tokens.css"
  },
  "sideEffects": ["*.css"],
  "peerDependencies": {
    "next": "^15.5.2",
    "next-auth": "^4.24.7",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "tailwindcss": "^3.4.10"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "isomorphic-dompurify": "^2.31.0",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "next": "^15.5.2",
    "next-auth": "^4.24.7",
    "tsup": "^8.1.0"
  }
}
