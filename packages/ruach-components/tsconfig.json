{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "incremental": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"],
      "@ruach/utils": ["../ruach-utils/src/index.ts"],
      "@ruach/utils/*": ["../ruach-utils/src/*"],
      "isomorphic-dompurify": ["./node_modules/isomorphic-dompurify"]
    }
  },
  "include": [
    "src",
    "src/types",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
